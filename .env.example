# Supabase Configuration
VITE_SUPABASE_PROJECT_ID=your_project_id
VITE_SUPABASE_PUBLISHABLE_KEY=your_anon_key
VITE_SUPABASE_URL=https://your_project.supabase.co

# Pesapal Payment Gateway Configuration
# Get your credentials from https://www.pesapal.com
VITE_PESAPAL_CONSUMER_KEY=your_consumer_key_here
VITE_PESAPAL_CONSUMER_SECRET=your_consumer_secret_here

# Pesapal API URL (use sandbox for testing, live for production)
# Sandbox: https://cybqa.pesapal.com/pesapalv3
# Live: https://pay.pesapal.com/v3
VITE_PESAPAL_API_URL=https://cybqa.pesapal.com/pesapalv3

# IPN (Instant Payment Notification) callback URL
# This should be your deployed application URL + /api/pesapal/ipn
VITE_PESAPAL_IPN_URL=https://yourdomain.com/api/pesapal/ipn

# Payment callback URL (where users are redirected after payment)
VITE_PESAPAL_CALLBACK_URL=https://yourdomain.com/payment/callback
